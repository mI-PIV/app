<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Imaging7">

    <ScrollView
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="60dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/learnImagingTextView0"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/learnImagingTextView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:layout_below="@id/learnImagingTextView0"/>


            <com.zolad.zoominimageview.ZoomInImageView
                android:id="@+id/learnImagingImageView37"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/focus_image"
                android:layout_below="@id/learnImagingTextView10"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/learnImagingTextView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:drawableBottom="@drawable/focusex1"
                android:layout_below="@id/learnImagingImageView37"/>

            <TextView
                android:id="@+id/learnImagingTextView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:text="\nAn image slightly out of focus. Where the particle edges are blurred andnon-distinct."
                android:drawableBottom="@drawable/focusex2"
                android:layout_below="@id/learnImagingTextView11"/>

            <TextView
                android:id="@+id/learnImagingTextView36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:layout_centerHorizontal="true"
                android:text="\nAn image in focus, with distinct particles and no blurring."
                android:drawableBottom="@drawable/focusex3"
                android:layout_below="@id/learnImagingTextView35"/>

        </RelativeLayout>
    </ScrollView>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation2"
        app:itemBackground="@android:color/white"
        />


</RelativeLayout>