<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_root"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.onrpiv.uploadmedia.Experiment.MainActivity">

    <Button
        android:id="@+id/video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#243EDF"
        android:textColor="#FFFFFF"
        android:text="Select or Record Video"/>

    <Button
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video"
        android:backgroundTint="#243EDF"
        android:textColor="#FFFFFF"
        android:text="select images for PIV"/>

    <Button
        android:id="@+id/main_load_exp_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:backgroundTint="#243EDF"
        android:text="Load Experiment"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/main_create_calibration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_load_exp_btn"
        android:backgroundTint="#243EDF"
        android:text="Create Camera Calibration"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/userSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_create_calibration"
        android:backgroundTint="#243EDF"
        android:text="User Settings"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/unicorn"
        android:layout_width="308dp"
        android:layout_height="237dp"
        android:layout_below="@+id/userSettings"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="186dp"
        android:src="@drawable/narwhal_new" />

    <ImageView
        android:id="@+id/bottomLabel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/userSettings"
        android:layout_marginTop="308dp"
        android:scaleType="centerInside"
        android:src="@drawable/usuonr" />
</RelativeLayout>
