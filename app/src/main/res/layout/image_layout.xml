<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/imageActivityRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/pickImageMultiple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/buttons"
            android:onClick="onClick_MultipleImages"
            android:text="Select Images"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/Review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pickImageMultiple"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttons"
            android:enabled="false"
            android:onClick="reviewFile"
            android:text="Check Image Correlation"
            android:textColor="#FFFFFF"
            android:visibility="visible" />

        <Button
            android:id="@+id/parameters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="inputPivOptions"
            android:layout_marginTop="10dp"
            android:enabled="false"
            android:text="Input PIV Parameters"
            android:layout_below="@+id/Review"
            android:background="@drawable/buttons"
            android:textColor="#FFFFFF"
            android:visibility="visible" />

        <Button
            android:id="@+id/compute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:enabled="false"
            android:onClick="processPiv"
            android:background="@drawable/buttons"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/parameters"
            android:text="Compute PIV" />

        <Button
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:enabled="false"
            android:onClick="displayResults"
            android:background="@drawable/buttons"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/compute"
            android:text="View results" />

    </RelativeLayout>

</RelativeLayout>
