<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.onrpiv.uploadmedia.Utilities.FrameView
        android:id="@+id/img_frame"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/baseView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/vortView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/vectorsView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/selectionView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </com.onrpiv.uploadmedia.Utilities.FrameView>

    <LinearLayout
        android:id="@+id/apply_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_frame"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageSaveButton"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:background="@drawable/buttons"
            android:contentDescription="Save Current Image"
            android:onClick="OnClick_SaveImage"
            android:visibility="visible"
            app:srcCompat="@android:drawable/ic_menu_save"
            tools:visibility="visible" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/apply_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vecLabel"
                    android:layout_width="259dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center|center_vertical"
                    android:text="Vector Field"
                    android:textAlignment="viewEnd"
                    android:textColor="#4CAF50"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/vecDropDown"
                    android:layout_width="43dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:backgroundTint="#4CAF50"
                    android:scaleType="center"
                    app:srcCompat="@drawable/drop_down" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:id="@+id/vecFieldLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#404CAF50"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Arrow Scale"
                    android:textAlignment="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <SeekBar
                        android:id="@+id/arrow_scale"
                        android:layout_width="239dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="10"
                        android:min="0"
                        android:progress="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arrow Color: " />

                    <android.widget.Button
                        android:id="@+id/vect_color"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:onClick="OnClick_ArrowColor" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="251dp"
                    android:layout_height="wrap_content"
                    android:text="Vorticity"
                    android:textAlignment="textEnd"
                    android:textColor="#F44336"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/vortDropDown"
                    android:layout_width="43dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:backgroundTint="#F44336"
                    android:scaleType="center"
                    app:srcCompat="@drawable/drop_down" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:id="@+id/vortLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#40F44336"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/vort_display"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:text="Display" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Transparent Values (normalized)"
                    android:textAlignment="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:theme="@style/MaterialTheme">

                    <com.google.android.material.slider.RangeSlider
                        android:id="@+id/rangeSeekBar"
                        android:layout_width="374dp"
                        android:layout_height="37dp"
                        android:valueFrom="0"
                        android:valueTo="255" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color Map: " />

                    <Button
                        android:id="@+id/vort_color"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:onClick="OnClick_VortColors"
                        android:scaleType="fitCenter" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="259dp"
                    android:layout_height="wrap_content"
                    android:text="Background"
                    android:textAlignment="textEnd"
                    android:textColor="#FF9800"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/backgroundDropDown"
                    android:layout_width="43dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:backgroundTint="#FF9800"
                    android:scaleType="center"
                    app:srcCompat="@drawable/drop_down" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:id="@+id/backgroundLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#40FF9800"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Background:" />

                    <Spinner
                        android:id="@+id/bg_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:dropDownWidth="wrap_content"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bg_color_picker"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Solid Color: " />

                    <Button
                        android:id="@+id/background_color"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:onClick="OnClick_BackgroundColor" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/postpLabel"
                    android:layout_width="259dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center|center_vertical"
                    android:text="Processing"
                    android:textAlignment="viewEnd"
                    android:textColor="#A020F0"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/postpDropDown"
                    android:layout_width="43dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:backgroundTint="#A020F0"
                    android:scaleType="center"
                    app:srcCompat="@drawable/drop_down" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:id="@+id/postpLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#40A020F0"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/vec_display"
                        android:layout_width="107dp"
                        android:layout_height="wrap_content"
                        android:text="Display" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/postp_rgroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:checkedButton="@id/replace"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <RadioButton
                        android:id="@+id/singlepass"
                        android:layout_width="118dp"
                        android:layout_height="wrap_content"
                        android:text="Single Pass" />

                    <RadioButton
                        android:id="@+id/multipass"
                        android:layout_width="111dp"
                        android:layout_height="wrap_content"
                        android:text="Multipass" />

                    <RadioButton
                        android:id="@+id/replace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Replacement" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="259dp"
                    android:layout_height="wrap_content"
                    android:text="Information"
                    android:textAlignment="textEnd"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/infoDropDown"
                    android:layout_width="43dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:backgroundTint="@color/colorGray"
                    android:scaleType="center"
                    app:srcCompat="@drawable/drop_down" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:id="@+id/infoSection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selection Highlight:" />

                    <Button
                        android:id="@+id/select_color"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:onClick="OnClick_SelectionColor" />

                </LinearLayout>

                <TextView
                    android:id="@+id/infoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please tap a point on the image to see information."
                    android:textAlignment="center" />

                <TableLayout
                    android:id="@+id/infoTextTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="Velocity:"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/resultsVelocity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp" />
                    </TableRow>

                    <TableRow android:padding="2dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Details:"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="X: " />

                        <TextView
                            android:id="@+id/resultsX"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="Y: " />

                        <TextView
                            android:id="@+id/resultsY"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="U: " />

                        <TextView
                            android:id="@+id/resultsU"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="V: " />

                        <TextView
                            android:id="@+id/resultsV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="Vorticity: " />

                        <TextView
                            android:id="@+id/resultsVort"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/resultsXYConversionRow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="Length Conversion: " />

                        <TextView
                            android:id="@+id/resultsXYConversion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/resultsTimeConversionRow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="Time Conversion: " />

                        <TextView
                            android:id="@+id/resultsTimeConversion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/resultsUVConversionRow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="Velocity Conversion: " />

                        <TextView
                            android:id="@+id/resultsUVConversion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp" />
                    </TableRow>

                </TableLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="259dp"
                    android:layout_height="wrap_content"
                    android:text="Parameters"
                    android:textAlignment="textEnd"
                    android:textColor="@color/color11"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/paramsDropDown"
                    android:layout_width="43dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:backgroundTint="@color/color11"
                    android:scaleType="center"
                    app:srcCompat="@drawable/drop_down" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/paramsSection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@color/color11"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/paramsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>

